{# extends "FOSUserBundle::layout.html.twig" #}
{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block map %}{% endblock %}

{% block body %}{% endblock %}

{% block fos_user_content %}
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<section id="formulaire">

  <div class="container">
    <div class="row">
      <form action="{{ path("fos_user_security_check") }}" method="post" class="col s8 offset-s2">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="row">
          <div class="input-field col s12">
            <input type="text" class="validate" id="username" name="_username" value="{{ last_username }}" required="required"/>
            <label for="username">Entrer votre nom d'utilisateur</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input type="password" id="password" name="_password" required="required" class="validate"/>
            <label for="password">Entrer votre mot de passe</label>
          </div>
        </div>

        <p>
          <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
          <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </p>

        <input type="submit" id="_submit" class="btn btn-success" name="_submit" value="{{ 'security.login.submit'|trans }}" />

      </form>
    </div>
  </div>
</section>

{% endblock fos_user_content %}
