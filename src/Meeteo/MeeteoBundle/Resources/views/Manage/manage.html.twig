{% extends "::base.html.twig" %}



{% block body %}

<div id="map" style="visibility: hidden;position:absolute;display: none;">
</div>
<!-- <h1>Welcome to the Manage:Manage page</h1> -->
<section id="gestion">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <table class="table table-striped table-responsive">
          <tr>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Roles</th>
            <th>ID</th>
            <th></th>
          </tr>
          {% for user in listeUsers %}
          <tr>
            <td>{{user.username}}</td>
            <td>{{user.email}}</td>
            <td>{{ user.roles|join(', ') }}</td>
            <td>{{user.id}}</td>
            <td><a class="btn btn-xs btn-default"  href="{{ path('_edit', {'id':  user.id  }) }}"><i  class="fa fa-edit"></i> </a></td>
          </tr>
          {% endfor %}
        </table>
      </div>
    </div>
  </div>
</section>



{% endblock %}
