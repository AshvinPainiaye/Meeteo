{% extends "::base.html.twig" %}

{% block search %}{% endblock %}

{% block body %}
<section id="formulaire">

  <div class="container">
    <div class="row">
      <div class="col s8 offset-s2">

        {{ form_start(form) }}

        <div class="row">
          <div class="input-field col s12">
            {{ form_widget(form.weather, {'attr':{'class':'validate'}}) }}
            <label>Météo</label>
            {{ form_errors(form.weather) }}
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            {{ form_widget(form.temperature, {'attr':{'class':'validate'}}) }}
            <label>Température (en °C)</label>
            {{ form_errors(form.temperature) }}
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            {{ form_widget(form.wind, {'attr':{'class':'validate'}}) }}
            <label>Vent</label>
            {{ form_errors(form.wind) }}
          </div>
        </div>

        <div class="row">
          <div class="file-field input-field col s12">
            <div class="btn-floating btn-large waves-effect waves-light tooltipped" type="submit" data-position="bottom" data-delay="50" data-tooltip="Photo" style="width:45px !important">
              <i class="material-icons" style="top:-4px !important; position: relative;">attach_file</i>
              {{ form_widget(form.imageFile) }}
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
        </div>

        <div class="row" style="text-align:center;">
          <button class="btn-floating btn-large waves-effect waves-light tooltipped" type="submit" data-position="bottom" data-delay="50" data-tooltip="Notifier">
            <i class="material-icons right">send</i>
          </button>
        </div>

        {{ form_end(form) }}

      </div>
    </div>
  </div>
</section>

{% endblock %}
